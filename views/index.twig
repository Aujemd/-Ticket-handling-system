{% extends "layout.twig" %}

{% block content %}
	<div>
		<div>
			<form action="{{url}}Login" method="post">
				<h3>Inicio de Sesión</h3>
				<input name="user" type="text" placeholder="Usuario">
				<input name="password" type="password" placeholder="Contraseña">
				<button type="submit">Iniciar Sesión</button>
			</form>
		</div>

		<div>
			<form action="{{url}}SignUp" method="post">
				<h3>Registrarse</h3>
				<div>
					<div>
						<input name="names" type="text" placeholder="Nombres">
					</div>
					<div>
						<input name="lastnames" type="text" placeholder="Apellidos">
					</div>
				</div>
				<div>
					<div>
						<input name="vid" type="text" placeholder="Cédula">
					</div>
					<div>
						<input name="address" type="text" placeholder="Dirección">
					</div>
				</div>
				<div>
					<div>
						<select name="sex">
							<option selected disabled value="">Sexo</option>
							<option value="Hombre">Hombre</option>
							<option value="Mujer">Mujer</option>
						</select>
					</div>
					<div>
						<input name="contact" type="text" placeholder="Teléfono de contacto">
					</div>
				</div>
				<div>
					<div>
						<input name="email" type="text" placeholder="Correo">
					</div>
					<div>
						<input name="user" type="text" placeholder="Nombre de Usuario">
					</div>
				</div>
				<div>
					<div>
						<input name="password" type="password" placeholder="Contraseña">
					</div>
					<div>
						<button type="submit">Registrarse</button>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
