{% extends "layout.twig" %}

{% block content %}
	<div class="maxAltura w-100 flex wrap">
		<form action="{{url}}Login" method="post" class=" fondo-oscuro-medio login-container flex index-container rounded">
			<h3 class=" text-white">Inicio de Sesión</h3>
			<input name="user" type="text" placeholder="Usuario" class="input login fondo-oscuro-medio rounded text-white">
			<input name="password" type="password" placeholder="Contraseña" class="input login fondo-oscuro-medio rounded text-white">
			<button type="submit" class="morado-claro button login text-white rounded">Iniciar Sesión</button>
		</form>

		<form action="{{url}}SignUp" method="post" class=" fondo-oscuro-medio signup-container flex index-container rounded">
			<h3 class=" text-white">Registrarse</h3>
			<div class="input-signup-container">
				<input name="names" type="text" placeholder="Nombres" class="input fondo-oscuro-medio rounded signup text-white">
				<input name="lastnames" type="text" placeholder="Apellidos" class="input fondo-oscuro-medio rounded signup text-white">
			</div>
			<div class="input-signup-container">
				<input name="vid" type="text" placeholder="Cédula" class="input fondo-oscuro-medio rounded signup text-white">
				<input name="address" type="text" placeholder="Dirección" class="input fondo-oscuro-medio rounded signup text-white">
			</div>
			<div class="input-signup-container">
				<select name="sex" class="input fondo-oscuro-medio rounded signup morado-text">
					<option selected disabled value="">Sexo</option>
					<option value="Hombre">Hombre</option>
					<option value="Mujer">Mujer</option>
				</select>
				<input name="contact" type="text" placeholder="Teléfono de contacto" class="input fondo-oscuro-medio rounded signup text-white">
			</div>
			<div class="input-signup-container">
				<input name="email" type="text" placeholder="Correo" class="input fondo-oscuro-medio rounded signup text-white">
				<input name="user" type="text" placeholder="Nombre de Usuario" class="input fondo-oscuro-medio rounded signup text-white">
			</div>
			<div class="input-signup-container">
				<input name="password" type="password" placeholder="Contraseña" class="input fondo-oscuro-medio rounded signup text-white">
				<button type="submit" class="morado-claro text-white rounded button-signup">Registrarse</button>
			</div>
		</form>
	</div>
{% endblock %}
