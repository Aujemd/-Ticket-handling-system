{% extends "users/dashboard.twig" %}

{% block mostrar %}

<div >
  <table >
    <thead>
      <tr>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Cédula</th>
        <th scope="col">Nombre del Evento</th>
        <th scope="col">Ubicación</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {% for ticket in tickets %}
      <tr>
        <td>{{ticket.user.names}}</td>
        <td>{{ticket.user.lastnames}}</td>
        <td>{{ticket.user.vid}}</td>
        <td>{{ticket.eventName}}</td>
        <td>{{ticket.ubication}}</td>
        <td><a  href="{{url}}Show/Ticket?id={{ticket.id}}" role="button">Ver</a>
        <a  href="{{url}}Edit/Ticket?id={{ticket.id}}" role="button">Editar</a>
        <a  href="{{url}}Delete/Ticket?id={{ticket.id}}" role="button">Eliminar</a></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}