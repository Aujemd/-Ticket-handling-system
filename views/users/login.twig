{% extends "layout.twig" %}

{% block content %}
	<div class="container text-center">
		<h1 class="text-primary">Iniciar Sesión</h1>
		<form action="{{url}}Login" method="post">
				<input name="user" type="text" class="form-control m-3" placeholder="Usuario">
				<input name="password" type="password" class="form-control m-3" placeholder="Contraseña">
				<button type="submit" class="btn btn-primary">Iniciar Sesión</button>
			</form>
		</div>
	{% endblock %}
